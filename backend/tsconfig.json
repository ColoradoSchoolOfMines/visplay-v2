{
    "compilerOptions": {
        "baseUrl": "./src",
        "esModuleInterop": true,
        "module": "CommonJS",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "preserveConstEnums": true,
        "removeComments": true,
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES6",
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules/*"
    ]
}
